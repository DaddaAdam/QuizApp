<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionNumber"
        android:text="Question x:"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionNumber"
        android:id="@+id/quiz_image"
        android:maxHeight="600px"
        android:layout_margin="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz_image"
        android:id="@+id/questionContent"
        android:text="Question content:"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionContent"
        android:id="@+id/answer_1"
        android:text="Answer 1"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_1"
        android:id="@+id/answer_2"
        android:text="Answer 2"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_2"
        android:id="@+id/answer_3"
        android:text="Answer 3"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_3"
        android:id="@+id/answer_4"
        android:text="Answer 4"
        android:layout_margin="10dp"
        />


</RelativeLayout>